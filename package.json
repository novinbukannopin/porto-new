{
  "name": "novin",
  "private": true,
  "description": "novin dev site",
  "version": "1.23.0",
  "author": "novin",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev",
    "build": "contentlayer build && next build",
    "build:turbo": "npx turbo build",
    "analyze": "cross-env ANALYZE=true pnpm build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "test": "vitest",
    "test:ui": "pnpm test --ui",
    "test:run": "pnpm test run",
    "test:coverage": "pnpm test:run --coverage",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && pnpm format",
    "type-check": "tsc --noEmit",
    "knip": "knip",
    "check:turbo": "npx turbo lint type-check",
    "format": "prettier --write src",
    "up-interactive": "pnpm up -i",
    "up-latest": "pnpm up-interactive -L",
    "release": "cross-env HUSKY=0 standard-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/next-js": "^2.1.5",
    "@chakra-ui/react": "2.8.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@giscus/react": "^2.3.0",
    "cmdk": "^0.2.0",
    "contentlayer": "^0.3.4",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.13.0",
    "lodash-es": "^4.17.21",
    "next": "13.4.12",
    "next-contentlayer": "^0.3.4",
    "next-seo": "^6.1.0",
    "nextjs-toploader": "^1.4.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.10.1",
    "react-markdown": "^8.0.7",
    "react-syntax-highlighter": "^15.5.0",
    "react-wrap-balancer": "^1.0.0",
    "reading-time": "^1.5.0",
    "rehype-raw": "^6.1.1",
    "remark-gfm": "^3.0.1",
    "rss": "^1.2.2",
    "sass": "^1.64.0",
    "swr": "^2.2.0",
    "ua-parser-js": "^1.0.35",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "17.6.7",
    "@commitlint/cz-commitlint": "17.6.7",
    "@next/bundle-analyzer": "^13.4.12",
    "@types/lodash-es": "^4.17.8",
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.15",
    "@types/react-syntax-highlighter": "^15.5.7",
    "@types/rss": "^0.0.30",
    "@types/ua-parser-js": "^0.7.36",
    "@vitest/coverage-c8": "^0.33.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "eslint-config-next": "13.4.12",
    "eslint-config-sznm": "^2.0.2",
    "husky": "^8.0.3",
    "knip": "^2.19.2",
    "lint-staged": "^13.2.3",
    "next-sitemap": "^4.1.8",
    "prettier": "^3.0.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  },
  "engines": {
    "node": ">=16.8.x",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.1.0"
}
